/* Reset */
/* Word Hacker 404 palette â€” do not change these tokens without design approval. */
:root {
	--base: #0b0b0d;
	--violet-hero-start: #2b0f4a;
	--violet-hero-end: #21102b;
	--violet-panel-top: rgba(46, 18, 74, 0.96);
	--violet-panel-bottom: rgba(12, 5, 18, 0.94);
	--panel: rgba(20, 10, 27, 0.94);
	--panel-soft: rgba(31, 16, 44, 0.9);
	--card: rgba(34, 15, 47, 0.95);
	--stroke: rgba(136, 86, 189, 0.55);
	--muted: #9aa3b2;
	--text: #e9eef6;
	--text-soft: rgba(233, 238, 246, 0.75);
	--highlight: #0aff6a;
	--highlight-soft: #07c06b;
	--danger: #d92e2e;
	--shadow: 0 35px 70px rgba(2, 1, 8, 0.75);
}

.trim-panel {
	border: 1px dashed rgba(122, 82, 168, 0.4);
	border-radius: 16px;
	padding: 0.75rem;
	background: linear-gradient(145deg, rgba(18, 10, 26, 0.85), rgba(7, 5, 10, 0.9));
}

.trim-headline {
	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 0.75rem;
}

.trim-readout {
	display: flex;
	gap: 0.9rem;
	font-size: 0.78rem;
	color: var(--muted);
	background: transparent;
	pointer-events: none;
}

.trim-handle::-webkit-slider-runnable-track {
	background: transparent;
	height: 44px;
}

.trim-handle::-webkit-slider-thumb {
	appearance: none;
	width: 12px;
	height: 34px;
	border-radius: 999px;
	background: var(--text);
	border: 1px solid var(--highlight);
	box-shadow: 0 0 15px rgba(10, 255, 106, 0.5);
	margin-top: 4px;
	pointer-events: auto;
	cursor: ew-resize;
}

.trim-handle::-moz-range-track,
.trim-handle::-moz-range-progress {
	background: transparent;
}

.trim-handle::-moz-range-thumb {
	width: 12px;
	height: 34px;
	border-radius: 999px;
	background: var(--text);
	border: 1px solid var(--highlight);
	box-shadow: 0 0 15px rgba(10, 255, 106, 0.5);
	pointer-events: auto;
	cursor: ew-resize;
}

.trim-handle-start { z-index: 2; }
.trim-handle-end { z-index: 3; }

*, *::before, *::after { box-sizing: border-box; }

html, body {
	margin: 0;
	padding: 0;
	font-family: 'Inter', sans-serif;
	font-size: 14px;
	background:
		linear-gradient(120deg, rgba(9, 3, 15, 0.95), rgba(6, 2, 10, 0.9)),
		radial-gradient(circle at 20% 15%, rgba(43, 15, 74, 0.65), transparent 45%),
		linear-gradient(160deg, var(--violet-hero-start), var(--violet-hero-end));
	color: var(--text);
	height: 100%;
}

body {
	min-height: 100vh;
	font-size: 0.92rem;
}

.window {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	height: 100vh;
	padding: 1rem 1.2rem;
}

.menu-bar {
	display: flex;
	align-items: center;
	justify-content: space-between;
	background: linear-gradient(120deg, rgba(30, 18, 48, 0.95), rgba(11, 9, 17, 0.9));
	border: 1px solid var(--stroke);
	border-radius: 18px;
	padding: 0.55rem 1rem;
	box-shadow: var(--shadow);
	-webkit-app-region: drag;
}

.menu-left {
	display: flex;
	gap: 0.85rem;
	font-size: 0.78rem;
	color: rgba(233, 238, 246, 0.9);
}

.menu-group {
	position: relative;
	display: inline-flex;
	-webkit-app-region: no-drag;
}

.menu-dropdown {
	position: absolute;
	top: calc(100% + 0.4rem);
	left: 0;
	min-width: 220px;
	background: rgba(9, 6, 13, 0.98);
	border: 1px solid rgba(122, 82, 168, 0.5);
	border-radius: 14px;
	padding: 0.45rem;
	display: none;
	flex-direction: column;
	gap: 0.25rem;
	box-shadow: 0 20px 45px rgba(0, 0, 0, 0.65);
	z-index: 5;
	-webkit-app-region: no-drag;
}

.menu-dropdown.open { display: flex; }

.menu-item {
	border: none;
	border-radius: 10px;
	background: transparent;
	color: var(--text);
	text-align: left;
	padding: 0.45rem 0.6rem;
	font-size: 0.85rem;
	cursor: pointer;
	-webkit-app-region: no-drag;
}

.menu-item:hover {
	background: rgba(10, 255, 106, 0.12);
}

.menu-divider {
	height: 1px;
	background: rgba(255, 255, 255, 0.08);
	margin: 0.35rem 0;
}

.menu-label {
	margin: 0 0 0.2rem;
	font-size: 0.7rem;
	text-transform: uppercase;
	letter-spacing: 0.2em;
	color: rgba(233, 238, 246, 0.55);
}

.menu-presets {
	display: flex;
	flex-direction: column;
	gap: 0.3rem;
	-webkit-app-region: no-drag;
}

.window-controls {
	display: flex;
	gap: 0.35rem;
	align-items: center;
	-webkit-app-region: no-drag;
}

.window-controls .ghost {
	width: 34px;
	height: 28px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.menu-left,
.menu-left .menu-btn,
.window-controls,
.window-controls button {
	-webkit-app-region: no-drag;
}

.ghost[data-pin].active {
	background: rgba(217, 46, 46, 0.25);
	border-color: rgba(217, 46, 46, 0.9);
	color: var(--danger);
	transform: scale(1.05);
}

.menu-title {
	font-size: 0.85rem;
	letter-spacing: 0.18em;
	text-transform: uppercase;
	font-weight: 600;
}

.menu-btn {
	border: none;
	background: transparent;
	color: rgba(255, 255, 255, 0.85);
	font-size: 0.87rem;
	padding: 0.3rem 0.6rem;
	cursor: pointer;
}

.workspace {
	display: grid;
	grid-template-columns: 1.3fr 0.8fr;
	gap: 1.1rem;
	flex: 1;
	min-height: 0;
}

.control-pane .action-row {
	flex-wrap: wrap;
	justify-content: flex-end;
	gap: 0.5rem;
}

.destination-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 1rem;
	padding: 0.75rem 1rem;
	border: 1px solid rgba(136, 86, 189, 0.35);
	border-radius: 16px;
	background: rgba(10, 6, 14, 0.7);
}

.destination-label {
	margin: 0.2rem 0 0;
	font-family: 'JetBrains Mono', monospace;
	font-size: 0.85rem;
	color: var(--text-soft);
}

.destination-actions {
	display: flex;
	gap: 0.4rem;
}

.workspace {
	display: grid;
	grid-template-columns: 1.3fr 0.8fr;
	gap: 1.1rem;
	flex: 1;
	min-height: 0;
}

.control-pane .action-row {
	flex-wrap: wrap;
	justify-content: flex-end;
	gap: 0.5rem;
}
.pane header {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	gap: 0.75rem;
}

.eyebrow {
	margin: 0;
	text-transform: uppercase;
	letter-spacing: 0.25em;
	font-size: 0.65rem;
	color: rgba(255, 255, 255, 0.85);
}

h1, h2, h3 {
	margin: 0;
	font-weight: 600;
}

.mono { font-family: 'JetBrains Mono', monospace; }

.preview-card {
	position: relative;
	border-radius: 18px;
	overflow: hidden;
	border: 1px solid rgba(136, 86, 189, 0.55);
	background: linear-gradient(140deg, rgba(53, 18, 82, 0.92), rgba(13, 4, 24, 0.93));
	box-shadow: 0 40px 70px rgba(3, 2, 8, 0.75);
}

#preview-video {
	width: 100%;
	height: 200px;
	background: #05070b;
	object-fit: contain;
}

.preview-empty {
	position: absolute;
	inset: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	background: linear-gradient(135deg, rgba(23, 13, 37, 0.92), rgba(8, 7, 13, 0.85));
	font-size: 0.95rem;
	color: var(--text);
	opacity: 0.75;
}

.preview-empty.hidden { display: none; }

.queue-toolbar,
.action-row,
.queue-actions {
	display: flex;
	align-items: center;
	gap: 0.5rem;
}

.queue-actions {
	flex-wrap: wrap;
	justify-content: flex-end;
}

.selection-counter {
	font-size: 0.8rem;
	color: var(--text-soft);
}

.queue-toolbar {
	flex-wrap: wrap;
}

.queue-select {
	display: flex;
	align-items: center;
	gap: 0.35rem;
	font-size: 0.8rem;
	color: var(--text-soft);
}

.queue-select input {
	width: 16px;
	height: 16px;
}

.queue-list {
	flex: 1;
	min-height: 0;
	margin-top: 0.4rem;
	display: flex;
	flex-direction: column;
	gap: 0.8rem;
	overflow-y: auto;
	padding-right: 0.2rem;
}

.queue-list::-webkit-scrollbar {
	width: 6px;
}

.queue-list::-webkit-scrollbar-thumb {
	background: rgba(122, 82, 168, 0.35);
	border-radius: 999px;
}

.queue-item {
	border: 1px solid rgba(122, 82, 168, 0.4);
	border-radius: 16px;
	padding: 0.75rem 0.9rem;
	background: linear-gradient(135deg, rgba(33, 14, 48, 0.85), rgba(11, 6, 18, 0.85));
	display: flex;
	flex-direction: column;
	gap: 0.55rem;
	cursor: pointer;
	box-shadow: inset 0 0 0 1px rgba(10, 255, 106, 0.06);
	transition: border-color 0.2s ease;
}

.queue-item.complete {
	border-color: rgba(10, 255, 106, 0.25);
}

.queue-item.downloading {
	border-color: rgba(10, 255, 106, 0.45);
}

.queue-item.error {
	border-color: rgba(255, 77, 109, 0.5);
}

.slot-head {
	display: flex;
	justify-content: space-between;
	gap: 0.8rem;
	align-items: flex-start;
}

.slot-meta {
	display: flex;
	gap: 0.75rem;
}

.slot-select {
	display: flex;
	align-items: center;
	gap: 0.35rem;
}

.slot-select input {
	width: 16px;
	height: 16px;
}

.slot-index { color: rgba(233, 238, 246, 0.6); font-family: 'JetBrains Mono', monospace; font-size: 0.7rem; font-weight: 600; }
.slot-url { margin: 0; font-weight: 600; word-break: break-all; color: var(--text); font-size: 0.88rem; line-height: 1.35; }
.slot-status { margin: 0.15rem 0 0; font-size: 0.72rem; color: rgba(154, 163, 178, 0.8); text-transform: uppercase; letter-spacing: 0.03em; }

.slot-actions {
	display: flex;
	gap: 0.3rem;
}

.slot-actions .slot-open {
	font-size: 0.9rem;
}

.slot-progress {
	display: flex;
	flex-direction: column;
	gap: 0.35rem;
}

.progress-bar {
	position: relative;
	height: 5px;
	border-radius: 999px;
	background: rgba(255, 255, 255, 0.15);
	overflow: hidden;
}

.progress-bar span {
	position: absolute;
	inset: 0;
	width: var(--progress, 0%);
	background: linear-gradient(90deg, rgba(10, 255, 106, 0.15), var(--highlight));
	transition: width 0.25s ease;
}

.slot-metrics {
	font-size: 0.78rem;
	color: rgba(255, 255, 255, 0.8);
}

.slot-files {
	border-top: 1px solid rgba(255, 255, 255, 0.06);
	padding-top: 0.5rem;
	margin-top: 0.25rem;
	display: flex;
	flex-direction: column;
	gap: 0.4rem;
}

.slot-files-title {
	margin: 0 0 0.15rem;
	font-size: 0.68rem;
	letter-spacing: 0.12em;
	text-transform: uppercase;
	color: rgba(10, 255, 106, 0.5);
	font-weight: 600;
}

.slot-file {
	display: flex;
	gap: 0.5rem;
	align-items: center;
	padding: 0.35rem 0.5rem;
	border-radius: 10px;
	background: rgba(0, 0, 0, 0.15);
	border: 1px solid rgba(255, 255, 255, 0.04);
}

.slot-file-info {
	flex: 1;
	min-width: 0;
}

.slot-file-name {
	margin: 0;
	font-weight: 600;
	color: var(--text);
	word-break: break-all;
	font-size: 0.82rem;
	line-height: 1.3;
}

.slot-file-path {
	margin: 0.1rem 0 0;
	font-size: 0.65rem;
	color: rgba(233, 238, 246, 0.45);
	font-family: 'JetBrains Mono', monospace;
	word-break: break-all;
	line-height: 1.3;
}

.slot-file-actions {
	display: flex;
	gap: 0.25rem;
}

.slot-file-actions .ghost-icon {
	font-size: 0.85rem;
}

.field-label {
	font-size: 0.78rem;
	letter-spacing: 0.2em;
	text-transform: uppercase;
	color: rgba(255, 255, 255, 0.9);
}

textarea {
    width: 100%;
    border-radius: 12px;
    border: 1px solid rgba(122, 82, 168, 0.35);
    background: rgba(8, 5, 12, 0.75);
    color: var(--text);
    padding: 0.6rem 0.7rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.78rem;
    resize: none;
    line-height: 1.45;
    box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.3);
}textarea::placeholder {
	color: rgba(233, 238, 246, 0.45);
}

.hint {
	margin: 0;
	font-size: 0.8rem;
	color: rgba(255, 255, 255, 0.7);
}

.format-btn {
	border-radius: 14px;
	border: 1px solid rgba(122, 82, 168, 0.35);
	background: rgba(255, 255, 255, 0.02);
	color: var(--text);
	padding: 0.45rem 0.55rem;
	font-size: 0.78rem;
	cursor: pointer;
	backdrop-filter: blur(6px);
}

.format-btn.active {
	border-color: var(--highlight);
	color: var(--highlight);
}

.primary {
	border: none;
	border-radius: 999px;
	background: linear-gradient(120deg, var(--highlight), var(--highlight-soft));
	color: #04150b;
	font-weight: 600;
	padding: 0.55rem 1.5rem;
	cursor: pointer;
	box-shadow: 0 0 20px rgba(10, 255, 106, 0.35);
}

.primary.full { width: 100%; justify-content: center; }

.ghost {
	border-radius: 999px;
	border: 1px solid rgba(122, 82, 168, 0.35);
	background: rgba(255, 255, 255, 0.03);
	color: var(--text);
	padding: 0.45rem 0.95rem;
	font-size: 0.85rem;
	cursor: pointer;
	transition: all 0.2s ease;
}

.ghost-icon { padding: 0.35rem 0.65rem; }
.ghost.danger { border-color: rgba(255, 77, 109, 0.4); color: var(--danger); }

.status-strip {
	display: flex;
	align-items: center;
	justify-content: space-between;
	background: linear-gradient(120deg, rgba(20, 12, 30, 0.95), rgba(12, 9, 18, 0.9));
	border: 1px solid var(--stroke);
	border-radius: 16px;
	padding: 0.4rem 1rem;
	font-size: 0.84rem;
	box-shadow: 0 18px 50px rgba(0, 0, 0, 0.45);
}

.status-left { display: flex; align-items: center; }
.status-right { display: flex; gap: 0.45rem; flex-wrap: wrap; }

.status-chip {
	background: rgba(122, 82, 168, 0.25);
	border-radius: 12px;
	padding: 0.22rem 0.85rem;
	font-size: 0.8rem;
	color: var(--text);
	white-space: nowrap;
	max-width: 220px;
	overflow: hidden;
	text-overflow: ellipsis;
}

.export-pop {
	position: fixed;
	inset: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	background: rgba(2, 0, 5, 0.78);
	backdrop-filter: blur(8px);
	opacity: 0;
	pointer-events: none;
	transition: opacity 0.2s ease;
}

.export-pop.open {
	opacity: 1;
	pointer-events: auto;
}

.export-card {
	width: 460px;
	max-width: 95vw;
	background: linear-gradient(145deg, rgba(32, 18, 46, 0.96), rgba(12, 8, 15, 0.92));
	border: 1px solid var(--stroke);
	border-radius: 26px;
	padding: 1.35rem;
	display: flex;
	flex-direction: column;
	gap: 1.1rem;
	box-shadow: var(--shadow);
}

.export-card header {
	display: flex;
	align-items: center;
	justify-content: space-between;
}


.export-form {
	display: flex;
	flex-direction: column;
	gap: 0.6rem;
}

.export-form label {
	font-size: 0.78rem;
	letter-spacing: 0.1em;
	text-transform: uppercase;
	color: rgba(255, 255, 255, 0.8);
}

.export-form select,
.export-form input[type="text"] {
	width: 100%;
}

.export-scope {
	display: flex;
	gap: 0.8rem;
	flex-wrap: wrap;
	font-size: 0.8rem;
	color: var(--text-soft);
}

.mode-row {
	display: flex;
	gap: 0.6rem;
	flex-wrap: wrap;
	font-size: 0.78rem;
	color: var(--muted);
}

select,
.export-card input[type="text"] {
	border-radius: 10px;
	border: 1px solid var(--stroke);
	background: var(--panel-soft);
	color: var(--text);
	padding: 0.55rem 0.6rem;
	font-family: inherit;
}

.path-row {
	display: flex;
	gap: 0.5rem;
}

.path-row input { flex: 1; }

.export-actions { display: flex; justify-content: flex-end; }

.empty {
	text-align: center;
	color: var(--muted);
	margin: 2rem 0;
}

@media (max-width: 1200px) {
	.workspace { grid-template-columns: 1fr; }
}

@media (max-width: 768px) {
	.window { padding: 0.5rem; }
	.menu-title { letter-spacing: 0.1em; }
	.status-right { justify-content: flex-end; }
	.trim-headline { flex-direction: column; align-items: flex-start; gap: 0.35rem; }
}
