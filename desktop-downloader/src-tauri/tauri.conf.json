{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "WH404.Downloader",
    "version": "1.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
            { "name": "yt-dlp", "sidecar": true },
            { "name": "ffmpeg", "sidecar": true },
            { "name": "explorer", "cmd": "explorer", "args": true }
        ]
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD/**", "$TEMP/*", "$APP/*", "$DESKTOP/**", "$DOCUMENTS/**", "$PICTURES/**", "$VIDEOS/**"]
      },
      "dialog": {
        "all": true
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.wordhacker.downloader",
      "externalBin": [
        "yt-dlp",
        "ffmpeg"
      ],
      "icon": [
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "en-US"
        },
        "nsis": {
          "installMode": "currentUser",
          "installerIcon": "icons/icon.ico",
          "headerImage": "icons/Header.bmp",
          "sidebarImage": "icons/Sidebar.bmp",
          "displayLanguageSelector": false,
          "languages": ["English"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "WH404 Downloader",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}
