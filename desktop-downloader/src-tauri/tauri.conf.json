{
  "build": {
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "WH404 Downloader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
            { "name": "bin/yt-dlp", "sidecar": true },
            { "name": "bin/ffmpeg", "sidecar": true }
        ]
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD/*", "$TEMP/*", "$APP/*"]
      },
      "dialog": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.wordhacker.downloader",
      "externalBin": [
        "bin/yt-dlp",
        "bin/ffmpeg"
      ],
      "icon": [
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "en-US"
        },
        "nsis": {
          "installMode": "currentUser",
          "installerIcon": "icons/icon.ico",
          "headerImage": "icons/icon.ico",
          "sidebarImage": "icons/icon.ico",
          "displayLanguageSelector": false,
          "languages": ["English"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "WH404 Downloader",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ]
  }
}
